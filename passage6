  <div id="game-container">
    <h1>SITH CIPHER CHALLENGE</h1>
    <p>DECODE: <strong>XLI MWXERX</strong></p>
    <p>CLUE: Shift each letter back by 2, then reverse the word.</p>
    <input type="text" id="answer" placeholder="ENTER DECODED WORD">
    <button onclick="checkAnswer()">SUBMIT</button>
    <div id="result"></div>
  </div>
  <script>
    function checkAnswer() {
      const answer = document.getElementById('answer').value.toLowerCase();
      const resultDiv = document.getElementById('result');
      if (answer === 'rebels') {
        resultDiv.innerHTML = 'CIPHER SOLVED. PASSWORD: <strong>SITHCODE</strong>';
        resultDiv.style.color = '#00ff00';
      } else {
        resultDiv.innerHTML = 'CIPHER FAILURE. RECOMPUTE.';
        resultDiv.style.color = '#ff0000';
      }
    }
  </script>
